{
  "Logging": {
    "Using": [ "Serilog.Sinks.RollingFile" ],
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "/var/log/DirectoryWalker/{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss:fff} [{Level,3:u}] {SourceContext} - {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}
