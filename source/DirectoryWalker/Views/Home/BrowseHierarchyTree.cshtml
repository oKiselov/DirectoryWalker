@{
    ViewData["Title"] = "Hierarchy Tree";
}

<div class="container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h2>Directory: @ViewBag.CurrentDirectory</h2>
        <h2>consist of @(((IEnumerable<string>)ViewBag.LinksToChildren).Count()) subdirectories:</h2>

        @foreach (string linkToChild in ViewBag.LinksToChildren)
        {
        <p>
            <a href="@linkToChild">@linkToChild</a>
        </p>
        }
    </div>
</div>
